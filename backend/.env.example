# Physical AI RAG Backend - Environment Configuration

# Application Environment
APP_ENV=development
DEBUG=True

# Cohere API Configuration
# Get your API key from https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Qdrant Cloud Configuration
# Host and API key for your Qdrant Cloud instance
QDRANT_HOST=your_qdrant_cloud_host_here
QDRANT_API_KEY=your_qdrant_cloud_api_key_here

# Neon Serverless Postgres Database
# Connection string for your Neon database
# Format: postgresql://user:password@host:port/database_name
NEON_DB_URL=postgresql://user:password@host:port/database_name

# Google API Configuration
# Get your API key from https://ai.google.dev/
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Separate database components (alternative to full URL)
# NEON_DB_USER=user
# NEON_DB_PASSWORD=password
# NEON_DB_HOST=host
# NEON_DB_PORT=port
# NEON_DB_NAME=database_name

# Other Configuration
# Maximum number of concurrent connections to database
DB_MAX_CONNECTIONS=10

# Timeout settings
REQUEST_TIMEOUT=30